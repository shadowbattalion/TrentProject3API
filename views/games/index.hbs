{{#extends 'base'}}

{{#block 'content'}}

<h3>Search</h3>
<form method="GET">
   {{{form}}}
    <input type="submit" value="Search" class="mb-3 mt-3 btn btn-primary" />
</form>

<h3>Game List</h3>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Banner Image</th>
            <th>Company Name</th>
            <th>Added Date</th>
            <th>Action</th>
        </tr>

    </thead>
    <tbody>
        {{#each games}}
            <tr>
                <td>
                    {{this.title}}
                </td>
                <td>
                    <img src="{{this.banner_image_thumbnail}}" class="img-fluid"/> 
                </td>
                <td>
                    {{this.company_name}}
                </td>
                <td>
                    {{this.added_date}}
                </td>
                <td>
                <a href="/list-games/{{this.id}}/details" class="btn btn-primary btn-sm">Details</a>
                <a href="/cart/{{this.id}}/add" class="btn btn-success btn-sm">Add to cart</a>
            </td>
            </tr>
        {{/each}}
    </tbody>
</table>
<a href="/list-games/add" class="btn btn-danger btn-sm">Add</a>
{{/block}}

{{/extends}}