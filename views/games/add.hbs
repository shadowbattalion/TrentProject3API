{{#block js}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.24.0/axios.min.js" integrity="sha512-u9akINsQsAkG9xjc1cnGF4zw5TFDwkxuc9vUp5dltDWYCSmyd0meygbvgXrlc/z7/o4a19Fb5V0OUE58J7dcyw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>

<script>
function signature(callback, signature_params){
    console.log(signature_params)
    axios.get('/cldnry/cldnry-sign',{params:{signature_params}}).then(function(response){callback(response.data)})
}

var myWidget = (banner_url, banner_uploaded) => { 
    



    return cloudinary.createUploadWidget({
        cloudName: '{{name}}',
        apiKey: '{{api_key}}',
        uploadPreset: '{{preset}}',
        uploadSignature: signature
    }, (error, result) => {
        console.log(result)
        if (!error && result && result.event === "success") {
        //console.log('Done! Here is the image info: ', result.info);
        // hide the upload widget 
        //document.querySelector('#upload_widget').style.display="none";
        
        // banner image
        document.querySelector(banner_url).value = result.info.url;
        document.querySelector(banner_uploaded).src = result.info.thumbnail_url;
        document.querySelector(banner_uploaded).style.display = 'inline';
        }
    })

}

document.getElementById("upload_widget_banner_image").addEventListener("click", () => {myWidget('#id_banner_image','#uploaded_image_banner').open()}, false);
document.getElementById("upload_widget_image_1").addEventListener("click", () => {myWidget('#id_url_1','#uploaded_image_1').open()}, false);
document.getElementById("upload_widget_image_2").addEventListener("click", () => {myWidget('#id_url_2','#uploaded_image_2').open()}, false);
document.getElementById("upload_widget_image_3").addEventListener("click", () => {myWidget('#id_url_3','#uploaded_image_3').open()}, false);
document.getElementById("upload_widget_image_4").addEventListener("click", () => {myWidget('#id_url_4','#uploaded_image_4').open()}, false);
document.getElementById("upload_widget_image_5").addEventListener("click", () => {myWidget('#id_url_5','#uploaded_image_5').open()}, false);

</script>


{{/block}}