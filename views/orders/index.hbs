{{#extends 'base'}}

{{#block 'content'}}

<form method="GET">
   {{{form}}}
    <input type="submit" value="Search" class="mb-3 mt-3 btn btn-primary" />
</form>

<table class="table">
    <thead>
        <tr>
            <th>Order Number</th>
            <th>Email</th>
            <th>Display Name</th>
            <th>Satus</th>
            <th>Items</th>
            <th>Total</th>
            <th>Date, Time</th>
        </tr>
    </thead>
    <tbody>
        {{#each orders}}
            <tr>
                 <td>
                    {{this.id}}
                </td>
                <td>
                    {{this.user.email}}
                </td>
                <td>
                    {{this.user.display_name}}
                </td>
                <td>
                    <a href="/orders/{{this.id}}/update" class="btn btn-primary btn-sm">{{this.status}}</a>
                </td>
                <td>
                    <ul>
                        {{#each this.order_items}}
                            <li>{{this.game.title}} X {{this.quantity}}</li>
                        {{/each}}
                    </ul>
                </td>
                <td>
                    {{this.total}}
                </td>
                <td>
                    {{this.date}}
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>
{{/block}}

{{/extends}}