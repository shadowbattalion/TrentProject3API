{{#extends 'base'}}

{{#block 'content'}}
<h1>Are you sure you want to delete Order Number {{order.id}}?</h1>
<table class="table">
    <thead>
        <tr>
            <th>Order Number</th>
            <th>Email</th>
            <th>Display Name</th>
            <th>Satus</th>
            <th>Items</th>
            <th>Total</th>
            <th>Date, Time</th>
        </tr>
        <tr>
                <td>
                    {{order.id}}
                </td>
                <td>
                    {{order.user.email}}
                </td>
                <td>
                    {{order.user.display_name}}
                </td>
                <td>
                    {{order.status}}
                </td>
                <td>
                    <ul>
                        {{#each order.order_items}}
                            <li>{{this.game.title}} X {{this.quantity}}</li>
                        {{/each}}
                    </ul>
                </td>
                <td>
                    {{order.total}}
                </td>
                <td>
                    {{order.date}}
                </td>
            </tr>
    </tbody>
</table>

<form method="POST">
    <input type="hidden" name="_csrf" value="{{csrf}}"/>
    <div class="alert alert-danger">
        <input type="submit" class="btn btn-danger" value="Yes"/>
        <a href="/orders" class="btn btn-success">No</a>
    </div>
</form>


{{/block}}

{{/extends}}

